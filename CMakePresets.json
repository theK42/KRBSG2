{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "MacOS",
      "displayName": "MacOs build",
      "description": "Build in XCode to run on MacOS",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build_macos",
      "cacheVariables": {
        "SDL2MIXER_OPUS": "OFF",
        "SDL2MIXER_FLAC": "OFF",
        "SDL2MIXER_MOD": "OFF",
        "SDL2MIXER_MIDI": "OFF"
      }
    },
    {
        "name": "WebASM",
        "displayName": "WebASM build",
        "description": "Build in emscripten to run on web",
        "generator": "Unix Makefiles",
        "toolchainFile": "/opt/homebrew/Cellar/emscripten/3.1.23/libexec/cmake/Modules/Platform/Emscripten.cmake",
        "binaryDir": "${sourceDir}/build_webasm"
      },
      {
      "name": "iOS",
      "displayName": "iOS build",
      "description": "Build in XCode to run on MacOS",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build_ios",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "iOS",
        "BUILD_SHARED_LIBS": "OFF",
        "SDL_STATIC": "ON",
        "SDL_SHARED": "OFF",
        "SDL2MIXER_OPUS": "OFF",
        "SDL2MIXER_FLAC": "OFF",
        "SDL2MIXER_MOD": "OFF",
        "SDL2MIXER_MIDI": "OFF"
      }
    }
  ]
}
